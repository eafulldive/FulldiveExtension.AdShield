<ui.home.PulsatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pulsatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:pulse_color="@color/colorAccentAlpha30"
    app:pulse_count="5"
    app:pulse_duration="5000"
    app:pulse_interpolator="Linear"
    app:pulse_repeat="5"
    app:pulse_startFromScratch="true">

    <ImageView
        android:id="@+id/activeBackgroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/background_circle_accent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/activateStateImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_circle_orange"
        android:paddingTop="@dimen/size_8dp"
        android:scaleType="center"
        android:src="@drawable/ic_activate_on" />
</ui.home.PulsatorLayout>