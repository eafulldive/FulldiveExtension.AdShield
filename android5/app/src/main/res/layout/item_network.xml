<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/network_icon"
        android:layout_width="@dimen/icon_bigger"
        android:layout_height="@dimen/icon_bigger"
        android:layout_marginTop="@dimen/size_16dp"
        android:src="@drawable/ic_all_networks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/network_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:singleLine="true"
        android:text="@string/networks_label_all_networks"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toStartOf="@+id/network_switch"
        app:layout_constraintStart_toEndOf="@+id/network_icon"
        app:layout_constraintTop_toTopOf="@+id/network_icon" />

    <TextView
        android:id="@+id/network_config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:text="@string/networks_label_configuration_enabled"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/text_size_xsmall"
        app:layout_constraintEnd_toStartOf="@+id/network_switch"
        app:layout_constraintStart_toEndOf="@+id/network_icon"
        app:layout_constraintTop_toBottomOf="@+id/network_name" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/network_switch"
        android:layout_width="@dimen/quad"
        android:layout_height="@dimen/quad"
        android:layout_marginStart="@dimen/size_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="network_icon,network_config" />

    <View
        android:id="@+id/network_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:background="@color/shadowColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />
</androidx.constraintlayout.widget.ConstraintLayout>