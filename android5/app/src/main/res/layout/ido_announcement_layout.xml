<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/idoAnnouncementCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/backgroundTabsAndNavBars"
        app:cardCornerRadius="@dimen/size_8dp"
        app:cardElevation="@dimen/size_4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_12dp"
            android:paddingBottom="@dimen/size_16dp">

            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_8dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorIconPrimary" />

            <TextView
                android:id="@+id/idoAnnouncementTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/ido_announcement_title"
                android:textAlignment="textStart"
                android:textColor="@color/colorIconPrimary"
                app:layout_constraintEnd_toStartOf="@+id/arrowImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idoAnnouncementDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ido_announcement_description"
                android:textAlignment="textStart"
                android:textColor="@color/colorIconPrimary"
                app:layout_constraintEnd_toStartOf="@+id/arrowImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idoAnnouncementTitleTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>